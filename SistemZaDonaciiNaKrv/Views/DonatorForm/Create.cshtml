@section scripts{
    <script>
        function boxChecker () {
            if ($(this).is(":checked")) {
                $(this).parent().children(".checkBoxStatus").text("Да");
                $(this).parent().children(".checkBoxStatus").css("color", "green");
            }
            else {
                $(this).parent().children(".checkBoxStatus").text("Не");
                $(this).parent().children(".checkBoxStatus").css("color", "red");
            }
        }

        $(document).ready(function () {
            var forms = document.querySelectorAll(".form-group");
            forms.forEach(function (it, i) {
                if (i % 2 == 0)
                    it.classList.add("table-default");
                else
                    it.classList.add("table-secondary");

            });

            $("input.check-box").each(boxChecker);
            

            $(".btn[type=\"submit\"]").hover(function () {
                $(this).removeClass("btn-primary");
                $(this).addClass("btn-success");
            }, function () {
                $(this).addClass("btn-primary");
                $(this).removeClass("btn-success");
            });
            $(".btn[href^=\"/DonatorForm\"]").hover(function () {
                $(this).removeClass("btn-default");
                $(this).addClass("btn-danger");
            }, function () {
                $(this).addClass("btn-default");
                $(this).removeClass("btn-danger");
            });
            $("input.check-box").click(boxChecker);
        });
    </script>
    }
